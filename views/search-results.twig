{% extends "layout-main.twig" %}

{% block title %}Hasil Pencarian{% endblock %}
{% block page_title %}Hasil Pencarian untuk: "{{ keyword }}"{% endblock %}

{% block content %}
<div class="row">
    {% for material in results %}
        <div class="col-md-6">
            <div class="card card-outline card-success">
                <div class="card-header">
                    <h3 class="card-title">{{ material.title }}</h3>
                </div>
                <div class="card-body">
                    <p>{{ material.description|slice(0, 150) ~ '...' }}</p>
                    <a href="/view-material/{{ material.id }}" class="btn btn-success">
                        <i class="fas fa-eye"></i> Lihat Materi
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="callout callout-warning">
                <h5>Tidak Ditemukan</h5>
                <p>Tidak ada materi yang cocok dengan kata kunci "{{ keyword }}". Coba gunakan kata kunci lain.</p>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}